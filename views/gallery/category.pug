extends ../layouts/application

block title
  = pageTitle

block content
  table(border='0' cellpadding='0' cellspacing='0' width='100%')
    tr
      td(colspan='3' style='padding:3px;' valign='top')
        table(border='0' width='100%' cellspacing='1' cellpadding='2')
          tr
            td(width='50%' style='white-space: nowrap;')
              = 'Фотографий в разделе: '
              b= totalItems
            td(align='right')
              include ../shared/pagination_short
              +paginationShort(currentPage, totalItems, itemsPerPage, urlToCategory)

          tr
            td(colspan='2' align='center')
              hr
              table(style='width:100%; min-width:900px' border='0' cellspacing='0' cellpadding='0' align='center')
                tr
                  td
                    ul.allEntriesTable.u-ecc-4#uEntriesList
                      each item, index in items
                        li.phtTdMain.uEntryWrap
                          div#entryID9.entryBlock
                            span.uphoto
                              span.photo-block
                                span.ph-wrap
                                  span.ph-tc
                                    img(src=`/images/gallery/thumb/${item.thumbImageInfo.filename}`)
                                  a.ph-link(href=`/gallery/detail/${item.slug}`)
                                    span.ph-tc
                                      span.ph-data
                                        span.ph-date= item.title
                                        span.ph-descr Открыть в отдельном окне
                                span.ph-details.ph-js-details
                                  span.phd-views= item.views
                                  span.phd-comments= item.comments.length
                                  span.phd-rating
                                    span#entRating9= (Math.round(item.rating * 100) / 100).toFixed(1)
          tr
            td(colspan='2' align='center')
              include ../shared/pagination_long
              +paginationLong(currentPage, totalItems, itemsPerPage, urlToCategory)
