body
  margin 10px
  scrollbar-highlight-color #1d3d54
  scrollbar-shadow-color #1d3d54
  scrollbar-arrow-color #000000
  scrollbar-track-color #e6e6e6
  background-color #000000

a
  font-size 11px
  font-family tahoma, sans-serif
  text-decoration none
  &:link
  &:visited
    color #444444
  &:hover
    color #cc6600

input
textarea
select
  vertical-align middle
  font-size 8pt
  font-family Verdana, Arial, Helvetica

h1
h2
  margin 0
  font-family Arial, Sans-Serif
  color #444444

h1
  font-size 14px

h2
  font-size 12px

hr
  height 1px
  color #444444