.category-item
  &__title
  &__title-link
    font bold 14px Arial, Sans-Serif

  &__title
    color #444444
    h1
      display inline
      font inherit

  &__title-link
    display inline-block
    margin-bottom 2px
    color #734323 !important
    text-decoration underline

  &__date-td
    font 7pt Tahoma, Arial, Sans-Serif
    white-space nowrap

  &__preview-body
    padding-bottom 5px
    text-align justify

  &__main-body
    padding 5px 0
    border-top 1px dashed #444444
    text-align justify

  &__details-td
  &__details-td1
  &__details-td2
    padding 3px 5px
    border-bottom 1px dashed #444444
    font 7pt/1.3 Tahoma, Arial, Sans-Serif
    color #444444
    text-align left

  &__details-td
  &__details-td1
    border-top 1px dashed #444444

  &__link
    font inherit

  &__rating
    float right