.marquee
  position relative
  width 100%
  height 140px
  overflow hidden
  &__slider
    position absolute
    width 100%
    will-change transform, top
    animation marquee-vertical 6s linear infinite

  &:hover &__slider
    animation-play-state paused

@keyframes marquee-vertical
  0%
    top 100%
    transform translateY(0)
  100%
    top 0
    transform translateY(-100%)